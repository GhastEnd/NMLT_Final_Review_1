#include <iostream>


using namespace std;

int main()
{
    long long X;
    cin >> X;
// Dù X âm hay dương, ta ép nó về DƯƠNG.
    X = abs(X);

    if (X == 1)
        cout << 2;
    else {
        long long ans = X / 3;
        if (X % 3 != 0)
        {
            ++ans;
        }
        cout << ans;
    }

}
